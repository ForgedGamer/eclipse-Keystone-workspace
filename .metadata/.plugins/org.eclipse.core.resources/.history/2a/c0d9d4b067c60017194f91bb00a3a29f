
package Shape;
import java.util.Scanner;
public class Grades 
{

	static public void main(String args[])
	{
		Scanner input = new Scanner(System.in);
		GradeHolder Grade = new GradeHolder();
		int student;
		int CLS;
		int grade = 0;
		System.out.println("Please enter a number to chose the student. 1 = Billy. 2 = James. 3 = Jason");
		while(true)
			{
			int studentTemp = input.nextInt();
			if (studentTemp < 4)
				{
				student = studentTemp;
				
				}else
				{
					System.out.println("That number is too large");
				}
			
		System.out.println("Which class? 1 = Bio. 2 = Geo. 3 = Math.");
		
		int tempCLS = input.nextInt();
		if (tempCLS < 4)
			{
			CLS = tempCLS;
			
			}else
			{
				break;
			}
			Grade.StudentChoice(student,CLS);
		}
		
		Grade.StudentGrade(grade);
	}
}
